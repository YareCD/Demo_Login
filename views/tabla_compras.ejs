
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CRUD</title>
    <link rel="stylesheet" href="../resources/css/tablaCrud.css">
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <div class="navbar-brand">
                <a class="homeBtn" href="/"><i class='bx bx-home'></i></a>
            </div>
          <a class="navbar-brand" href="#"></a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                Más +
              </a>
              <ul class="dropdown-menu">
                <li><a class="dropdown-item" href="/tabla_crud">Usuarios</a></li>
                <li><a class="dropdown-item" href="/tabla_productos">Productos</a></li>
              </ul>
            </li>
          </ul>
        </div>
      </nav>

    <div class="contenedor">
        <script>
            function eliminar(){
                var resp = confirm("¿Estas seguro que deseas eliminarlo?");
                return resp
            }
        </script>
        
        <h1 class="text-center p-3 bg-morado text-white">COMPRAS</h1>
        <div class="text-center p-5 text-white">
            <div class="table-responsive">
                <table class="table table-dark table-striped">
                    <thead>
                        <tr>
                            <th scope="col">ID</th>
                            <th scope="col">Usuario ID</th>
                            <th scope="col">Producto ID</th>
                            <th scope="col">Cantidad</th>  
                            <th scope="col">Total</th>                          
                            <th scope="col">Fecha</th>                              
                            <th scope="col"></th>
                        </tr>
                    </thead>
                    <tbody>
                        <% results.forEach((compras) => { %>
                            <tr>    
                                <td><%= compras.id %></td>
                                <td><%= compras.usuario_id %></td>
                                <td>$ <%= compras.producto_id %></td>
                                <td><%= compras.cantidad %></td>  
                                <td><%= compras.total %></td> 
                                <td><%= compras.fecha %></td>                                
                                <td> 
                                    <a href="/edit_C/<%= compras.id %>" class="btn btn-warning btn-sm"><i class='bx bx-edit-alt'></i></a>
                                    <a onclick="return eliminar()" href="/delete_C/<%= compras.id %>" class="btn btn-danger btn-sm"><i class='bx bx-trash'></i></a>
                                </td>
                            </tr>
                            <% }); %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>
